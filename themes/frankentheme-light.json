//  Frankentheme icons
//  @link https://github.com/diegocurbelo/vscode-frankentheme
{
	"name": "Frankentheme Light",
	"type": "light",
	"colors": {
		"activityBar.background": "#616161",
		"list.activeSelectionBackground": "#909090",
		
		// Editor
		"editorLineNumber.foreground": "#c0c0c0",

		// Statusbar
		"statusBar.background": "#616161",
		// "statusBar.foreground": "#24292e",
		// "statusBar.border": "#ddd",
		// "statusBar.noFolderForeground": "#24292e",
		// "statusBar.noFolderBackground": "#fafbfc",
		// "statusBar.debuggingForeground": "#24292e",
		// "statusBar.debuggingBackground": "#fafbfc",

		// Notification
		"notification.background": "#54a3ff"
	},
	"tokenColors": [
		{
			"scope": "emphasis",
			"settings": {
				"fontStyle": "italic"
			}
		},
		{
			"scope": "strong",
			"settings": {
				"fontStyle": "bold"
			}
		},
		{
			"scope": "comment",
			"settings": {
				"foreground": "#6a737d"
			}
		},
		{
			"scope": "string",
			"settings": {
				"foreground": "#032f62"
			}
		},
		{
			"scope": [
				"constant.numeric",
				"constant.language.null",
				"variable.language.this",
				"support.type.primitive",
				"support.function",
				"support.variable.dom",
				"support.variable.property",
				"support.variable.property",

				// CSS
				"meta.property-name",
				"meta.property-value",

				// Handlebars
				"support.constant.handlebars"
			],
			"settings": {
				"foreground": "#005cc5"
			}
		},
		{
			"scope": [
				"keyword",
				"storage.modifier",
				"storage.type",
				"variable.parameter"
			],
			"settings": {
				"foreground": "#d73a49"
			}
		},
		{
			"scope": [
				"entity.name.type",
				"entity.other.inherited-class",
				"meta.function-call",

				// HTML/XML
				"entity.other.attribute-name",

				// Shell
				"entity.name.function.shell"
			],
			"settings": {
				"foreground": "#6f42c1"
			}
		},
		{
			"scope": [
				"entity.name.tag"
			],
			"settings": {
				"foreground": "#22863a"
			}
		}
	]
}